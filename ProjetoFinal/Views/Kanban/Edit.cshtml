@{
    Layout = "_Layout";
}
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>Editar Tarefa</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <form name="frmCreate" method="post" action="/Kanban/Edit" validate>
                <input type="hidden" value="@Model.Id" name="Id"/>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Nome</label>
                        <input type="text" class="form-control" value="@Model.Title" placeholder="Nome" name="Title" id="txtNome" required>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Descrição</label>
                        <textarea class="form-control" name="Description" id="txtDescription" required>@Html.Raw(Model.Description)</textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Tempo estimado</label>
                        <input type="number" class="form-control" value="@Model.EstimatedTime" placeholder="Tempo estimado" name="EstimatedTime" id="txtEstimatedTime" required>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12" style="display: flex; justify-content: center;">
                        <button id="submit" type="submit" name="submit" class="btn btn-default" style="width: 25rem; height: 4rem; font-size: 1.8rem;">Editar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>