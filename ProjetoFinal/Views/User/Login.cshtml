@{
    Layout = "_Layout";
}

<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1 style="text-align: center;">Login</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <form name="frmLogin" method="post" action="/User/Login" validate>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="Email" name="Email" id="Email" required data-validation-required-message="Por favor indique o seu Email.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Pass</label>
                        <input type="password" class="form-control" placeholder="Pass" name="Pass" id="Pass" required data-validation-required-message="Por favor indique a sua Pass.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12" style="display: flex; justify-content: center;">
                        <label>Ainda não tenho uma conta. <a href="/User/Regist" style="text-decoration: underline; color: var(--color-primary) !important;">Registo</a></label>
                    </div> 
                    <div class="form-group col-xs-12" style="display: flex; justify-content: center;">
                        <button id="submit" type="submit" name="submit" class="btn btn-primary" style="width: 25rem; height: 4rem; font-size: 1.8rem;">Entrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<hr>
